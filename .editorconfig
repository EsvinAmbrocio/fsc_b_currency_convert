# Editor config for C, Bash, and Markdown files
root = true

[*]
indent_style = space
indent_size = 4

[*.c]
tab_width = 4
end_of_line = lf
file_encoding = utf-8

[*.bash]
tab_width = 4
end_of_line = lf
file_encoding = utf-8

[*.md]
tab_width = 2
trim_trailing_whitespace = true
file_encoding = utf-8
